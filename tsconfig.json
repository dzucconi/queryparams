{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "es2016", "es2017", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
